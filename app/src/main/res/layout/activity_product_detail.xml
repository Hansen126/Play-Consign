<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <ImageView
                    android:id="@+id/detailProductImageIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_image" />

                <ImageView
                    android:id="@+id/detailLogoutIV"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/ic_arrow_back" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detailProductPriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/archivo"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailProductNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/archivo"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailProductCategoryTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/archivo" />

                <TextView
                    android:id="@+id/detailProductConditionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/archivo" />

                <TextView
                    android:id="@+id/detailProductTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/archivo"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailProductDescriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/archivo" />

                <LinearLayout
                    android:id="@+id/profileSellerLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/ic_searchview_outline"
                    android:backgroundTint="#9B1E1E"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailProductSellerTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="28dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/archivo"
                        android:text="Seller"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_person" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/detailProductSellerShopNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="116dp"
                        android:layout_marginTop="-76dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/archivo"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailProductSellerPhoneTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="116dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/archivo" />

                    <TextView
                        android:id="@+id/detailProductSellerDomicileTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="116dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/archivo" />

                    <Button
                        android:id="@+id/detailContactSellerButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="-36dp"
                        android:backgroundTint="#9D1E1E"
                        android:text="Contact Seller"
                        android:textColor="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_contact"
                        app:iconGravity="textStart"
                        app:iconTint="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#9D1E1E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/detailContactSellerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/design_default_color_background"
            android:text="Contact Seller"
            android:textColor="#9D1E1E"
            android:textColorLink="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_contact"
            app:iconGravity="textStart"
            app:iconTint="#9D1E1E" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>